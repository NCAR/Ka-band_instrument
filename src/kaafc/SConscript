# -*- python -*-

tools = Split("""
pmc730
doxygen
""")

sources = Split("""
Adf4001.cpp
KaAdf4001.cpp
KaAfc.cpp
""")

headers = Split("""
Adf4001.h
KaAdf4001.h
""")

env = Environment(tools = ['default'] + tools)

kaafc = env.Program('kaafc', sources)

html = env.Apidocs(sources + headers, DOXYFILE_FILE = "Doxyfile")

Default(kaafc, html)

