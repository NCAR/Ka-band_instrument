# -*- python -*-

tools = Split("""
logx
pentek
boost_date_time
boost_mutex
boost_program_options
doxygen
qt4
pmc730
rapradar
xmitclient
xmlrpc
""")

sources = Split("""
Adf4001.cpp
BurstData.cpp
KaDrxConfig.cpp
KaDrxPub.cpp
KaMerge.cpp
KaMonitor.cpp
KaOscControl.cpp
KaOscillator3.cpp
KaPmc730.cpp
PulseData.cpp
TtyOscillator.cpp
main.cpp
""")

headers = Split("""
Adf4001.h
BurstData.h
CircBuffer.h
KaDrxConfig.h
KaDrxPub.h
KaMerge.h
KaMonitor.h
KaOscControl.h
KaOscillator3.h
KaPmc730.h
PulseData.h
TtyOscillator.h
""")

env = Environment(tools = ['default'] + tools)
env.EnableQt4Modules(['QtCore'])

kadrx = env.Program('kadrx', sources)

html = env.Apidocs(sources + headers, DOXYFILE_FILE = "Doxyfile")

Default(kadrx, html)

