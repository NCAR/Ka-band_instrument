# -*- python -*-

tools = Split("""
kadds
pentek
qtt_qtconfig
boost_date_time
boost_program_options
doxygen
qt4
""")

sources = Split("""
KaDrxConfig.cpp
KaDrxPub.cpp
main.cpp
""")

headers = Split("""
KaDrxConfig.h
KaDrxPub.h
""")

env = Environment(tools = ['default'] + tools)

kadrx = env.Program('kadrx', sources)

html = env.Apidocs(sources + headers, DOXYFILE_FILE = "Doxyfile")

Default(kadrx, html)


footools = Split("""
pmc730
""")
fooenv = Environment(tools = ['default'] + footools)
fooenv['CCFLAGS'] = ['-g', '-O0']
foo = fooenv.Program('foo.cpp')
Default(foo)

