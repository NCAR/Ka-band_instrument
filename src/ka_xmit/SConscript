# -*- python -*-

tools = Split("""
logx
doxygen
xmlrpc
""")

env = Environment(tools = ['default'] + tools)

xmitd_sources = Split("""
ka_xmitd.cpp
""")
ka_xmitd = env.Program('ka_xmitd', xmitd_sources)
Default(ka_xmitd)

xmitctl_sources = Split("""
ka_xmitctl.cpp
""")
ka_xmitctl = env.Program('ka_xmitctl', xmitctl_sources)
Default(ka_xmitctl)

html = env.Apidocs(xmitd_sources + xmitctl_sources, DOXYFILE_FILE = "Doxyfile")
Default(html)
